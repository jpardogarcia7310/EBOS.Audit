{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AuditConnection": ""
  },
  "ApiKeys": {
    "PrimaryKey": "REPLACE-WITH-SECURE-KEY",
    "SecondaryKey": "REPLACE-WITH-ROTATED-KEY"
  },
  "AuditRetention": {
    "ActivityDays": 180,
    "ChangeDays": 365,
    "EventDays": 365,
    "BatchSize": 5000,
    "Enabled": true,
    "RunAtHour": 3
  },
  "OpenTelemetry": {
    "Tracing": {
      "Enabled": true,
      "Exporter": "otlp",
      "Endpoint": "http://localhost:4317"
    },
    "Metrics": {
      "Enabled": true,
      "Exporter": "otlp",
      "Endpoint": "http://localhost:4317"
    },
    "Logging": {
      "Enabled": true
    }
  }
}
